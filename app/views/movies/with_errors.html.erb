<!-- app/view/movies/with_errors.html.erb -->

<h2>
  Add a new movie
</h2>

<% @the_movie.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>

<form action="/movies" method="post" data-turbo="false">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div>
      <label for="title">
          Title
      </label>

      <input type="text" id="title" name="title" value="<%= @the_movie.title %>">
    </div>

    <div>
      <label for="description">
        Description
      </label>

      <input type="text" id="description" name="description" value="<%= @the_movie.description %>">
    </div>

    <div>
      <label for="released">
        Released
      </label>

      <input type="text" id="released" name="released">
    </div>

    <button>
      Create movie
    </button>
  </form>
